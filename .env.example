PROXMOX_TOKEN_NAME=your-token-name
PROXMOX_TOKEN_VALUE=your-token-value-here

# Optional settings (these have defaults)
PROXMOX_USER=root@pam
PROXMOX_VERIFY_SSL=false
LOG_LEVEL=INFO